<UserControl x:Class="Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WalkmanManager"
             xmlns:mD="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" Height="310" Width="485">
	<Grid>
		<Label HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0">库位置：</Label>
		<TextBox VerticalAlignment="Top" Margin="73,10,52,0" IsReadOnly="True" mD:TextFieldAssist.DecorationVisibility="Collapsed" BorderThickness="0,0,0,1"/>
		<Button x:Name="ButtonOpen" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,3,10,0" Width="37" Style="{DynamicResource MaterialDesignToolButton}">
			<mD:PackIcon Kind="FolderOpen"/>
		</Button>

		<GroupBox Margin="10,40,10,0" Height="87" VerticalAlignment="Top" Header="数据库维护">
			<Grid>
				<Button HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,0,0,0">删除曲库记录</Button>
				<Button HorizontalAlignment="Left" VerticalAlignment="Top" Margin="173,0,0,0">清除播放列表</Button>
				<Button HorizontalAlignment="Left" VerticalAlignment="Top" Margin="322,0,0,0">重建数据库</Button>
			</Grid>
		</GroupBox>
	</Grid>
</UserControl>
